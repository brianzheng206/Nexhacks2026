{
  "name": "roomscan-remote-server",
  "version": "1.0.0",
  "description": "RoomScan Remote server - receives RoomPlan scans from iOS and serves web UI",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "NODE_ENV=development node --no-deprecation server.js",
    "dev:ui": "cd UI && npm run dev",
    "build:ui": "cd UI && npm run build",
    "build:ui:watch": "cd UI && npm run build -- --watch"
  },
  "keywords": [
    "roomplan",
    "scan",
    "websocket"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "qrcode": "^1.5.3",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "http-proxy-middleware": "^3.0.5"
  }
}
